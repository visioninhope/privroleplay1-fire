{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next",
        "typeRoots": ["./node_modules/@types", "./apps/web/types"]
      }
    ],
    "declaration": false
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "convex/auth.config.js",
    "apps/web/types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
